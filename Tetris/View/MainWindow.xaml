<Window x:Class="Tetris.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris"
        mc:Ignorable="d"
         Title="GameStart" Height="200" Width="300" MinHeight="150" MinWidth="190"
        Background="AliceBlue">
    <Grid Height="auto" Width="auto">
        <TextBlock  FontSize="20" Margin="0,10,0,0" Height="auto" Width="auto" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Start Game?" VerticalAlignment="Top" Foreground="Blue"/>
        <Button Height="auto" Click="Button_Click_Yes" Content="Yes" HorizontalAlignment="Left" Background="Pink" Foreground="Yellow"  Margin="10,41,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="Button_Click_No" Content="No" HorizontalAlignment="Right" Background="Pink" Foreground="Yellow"   Margin="0,41,10,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="Button_Click_Help" Content="Help" HorizontalAlignment="Center" Background="Pink" Foreground="Yellow"   Margin="0,41,10,0" VerticalAlignment="Center" Width="75"/>

    </Grid>
</Window>
